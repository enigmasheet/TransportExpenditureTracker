@model IEnumerable<TransportExpenditureTracker.Models.Item>

@{
    ViewData["Title"] = "Items List";
}

<h1>Item List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create New Item
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
               
                <td class="d-flex gap-2">
                    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.ItemId" class="btn btn-sm btn-primary"
                           data-bs-toggle="tooltip" title="Edit">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.ItemId" class="btn btn-sm btn-info"
                           data-bs-toggle="tooltip" title="Details">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ItemId" class="btn btn-sm btn-danger"
                           data-bs-toggle="tooltip" title="Delete">
                            <i class="bi bi-trash"></i>
                        </a>
                    }
                </td>
        </tr>
}
    </tbody>
</table>
