@using TransportExpenditureTracker.ViewModels
@model List<UserCompanyListViewModel>
@{
    ViewData["Title"] = "User Companies";
}

<h2 class="mb-4">User Company Assignments</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Email</th>
            <th>Assigned Companies</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    @if (user.CompanyNames.Any())
                    {
                        @string.Join(", ", user.CompanyNames)
                    }
                    else
                    {
                        <span class="text-muted">None</span>
                    }
                </td>
                <td>
                    <a asp-action="ManageUserCompanies" asp-route-userId="@user.UserId" class="btn btn-sm btn-primary">
                        Manage
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
