@model TransportExpenditureTracker.ViewModels.ManageUserCompaniesPageViewModel

<div class="modal-header">
    <h5 class="modal-title">Manage Companies for @Model.Email</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form asp-action="ManageUserCompanies" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />

    <div class="modal-body">
        @for (int i = 0; i < Model.Companies.Count; i++)
        {
            <div class="form-check">
                <input class="form-check-input" asp-for="Companies[i].Selected" />
                <input type="hidden" asp-for="Companies[i].CompanyId" />
                <input type="hidden" asp-for="Companies[i].CompanyName" />
                <label class="form-check-label" asp-for="Companies[i].Selected">@Model.Companies[i].CompanyName</label>
            </div>
        }
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Save</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>
